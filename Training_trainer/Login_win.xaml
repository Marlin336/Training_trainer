<Window x:Class="Training_trainer.Login_win"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Training_trainer"
        mc:Ignorable="d"
        Title="Вход" Height="190" Width="327" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tb_log" Height="23" Margin="81,25,30,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="Tb_log_TextChanged"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="30,49,0,0" VerticalAlignment="Top" Height="27"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="36,21,0,0" VerticalAlignment="Top" Height="27"/>
        <PasswordBox x:Name="tb_pass" Margin="81,53,30,0" VerticalAlignment="Top" Height="23" PasswordChanged="Tb_pass_PasswordChanged"/>
        <Button x:Name="b_ent" Content="Вход" Height="40" IsEnabled="False" Click="B_ent_Click" Margin="30,0,30,21" VerticalAlignment="Bottom" IsDefault="True"/>

    </Grid>
</Window>
