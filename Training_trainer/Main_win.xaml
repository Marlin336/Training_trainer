<Window x:Class="Training_trainer.Main_win"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Training_trainer"
        mc:Ignorable="d"
        Title="Main_win" Height="550" Width="800" Closing="Window_Closing">
    <Grid>
        <Menu VerticalAlignment="Top" Height="25">
            <MenuItem x:Name="b_profile" Header="Профиль"/>
            <MenuItem x:Name="b_logout" Header="Выход" Height="25" Click="B_logout_Click"/>
        </Menu>
        <Button x:Name="b_ctrgr" Content="Создать группу" HorizontalAlignment="Left" Margin="10,0,0,10" Width="130" Height="44" VerticalAlignment="Bottom" Click="B_ctrgr_Click" FontSize="16"/>
        <TabControl Margin="10,30,10,59">
            <TabItem Header="Мои группы">
                <Grid Background="#FFE5E5E5">
                    <DataGrid/>
                </Grid>
            </TabItem>
            <TabItem Header="Все группы">
                <Grid Background="#FFE5E5E5">
                    <DataGrid/>
                </Grid>
            </TabItem>
        </TabControl>
        <Button Content="Button" HorizontalAlignment="Left" Margin="145,465,0,0" VerticalAlignment="Top" Width="75" Height="44" Click="Button_Click"/>

    </Grid>
</Window>
