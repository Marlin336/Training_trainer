<Window x:Class="Training_trainer.XrcsList_win"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Training_trainer"
        mc:Ignorable="d"
        Title="Упражнения" Height="461" Width="380">
    <Grid>
        <DataGrid x:Name="dg_list" Margin="10,10,10,64" FontSize="14">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="id" IsReadOnly="True" Visibility="Collapsed"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Название" IsReadOnly="True"/>
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Добавить" Width="72"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="b_crt_exerc" Content="Создать упражнение" Margin="10,0,10,10" FontSize="16" Height="49" VerticalAlignment="Bottom" Click="B_crt_exerc_Click"/>

    </Grid>
</Window>
