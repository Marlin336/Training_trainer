        <CheckBox x:Name="cb_sun" Content="Воскресенье" HorizontalAlignment="Left" Margin="10,223,0,0" VerticalAlignment="Top" FontSize="16" Checked="Cb_sun_Checked" Unchecked="Cb_sun_Unchecked"/>
