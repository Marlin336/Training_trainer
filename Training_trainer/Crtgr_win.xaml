        <ext:TimePicker x:Name="tp_tue" Margin="159,74,0,0" ShowDropDownButton="False" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="157" IsEnabled="False" DisplayDefaultValueOnEmptyText="True" Value="05/18/2019 12:00:00"/>
        <ext:TimePicker x:Name="tp_wed" Margin="159,103,0,0" ShowDropDownButton="False" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="157" IsEnabled="False" DisplayDefaultValueOnEmptyText="True" Value="05/18/2019 12:00:00"/>
        <ext:TimePicker x:Name="tp_thu" Margin="159,132,0,0" ShowDropDownButton="False" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="157" IsEnabled="False" DisplayDefaultValueOnEmptyText="True" Value="05/18/2019 12:00:00"/>
        <ext:TimePicker x:Name="tp_fri" Margin="159,161,0,0" ShowDropDownButton="False" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="157" IsEnabled="False" DisplayDefaultValueOnEmptyText="True" Value="05/18/2019 12:00:00"/>
        <ext:TimePicker x:Name="tp_sat" Margin="159,190,0,0" ShowDropDownButton="False" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="157" IsEnabled="False" DisplayDefaultValueOnEmptyText="True" Value="05/18/2019 12:00:00"/>
        <ext:TimePicker x:Name="tp_sun" Margin="159,219,0,0" ShowDropDownButton="False" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="157" IsEnabled="False" DisplayDefaultValueOnEmptyText="True" Value="05/18/2019 12:00:00"/>

    </Grid>
