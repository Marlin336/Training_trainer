        <CheckBox x:Name="cb_tue" Content="Вторник" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" FontSize="16" Checked="Cb_tue_Checked" Unchecked="Cb_tue_Unchecked"/>
