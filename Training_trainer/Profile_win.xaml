<Window x:Class="Training_trainer.Profile_win"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Training_trainer"
        mc:Ignorable="d"
        Height="176" Width="404" Title="Профиль" MinWidth="274" MinHeight="152" ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="l_name" Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" FontWeight="Bold"/>
        <Label x:Name="l_login" Content="Логин: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,88,0,0"/>
        <Label x:Name="l_mail" Content="E-mail: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,62,0,0"/>
        <Label x:Name="l_birthday" Content="Дата рождения: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,36,0,0"/>
        <Button x:Name="b_edit" Margin="0,0,10,7" HorizontalAlignment="Right" Width="104" ToolTip="Редактировать" Height="36" VerticalAlignment="Bottom" Click="B_edit_Click" Content="Редактировать" FontSize="14"/>

    </Grid>
</Window>
